<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.rulerseekbar.rulerpickerview.VerticalRulerValuePicker
        android:id="@+id/ruler_picker"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/transparent"
        app:indicator_color="@android:color/black"
        app:indicator_interval="50dp"
        app:indicator_width="1dp"
        app:max_value="215"
        app:min_value="1"
        app:notch_color="@android:color/black"
        app:ruler_text_color="@android:color/black"
        app:ruler_text_size="6sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.example.rulerseekbar.rulerpickerview.RulerValuePicker
        android:id="@+id/ruler_picker_2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        app:indicator_color="@android:color/black"
        app:indicator_interval="14dp"
        app:indicator_width="2dp"
        app:max_value="120"
        app:min_value="35"
        android:visibility="gone"
        app:notch_color="@android:color/black"
        app:ruler_text_color="@android:color/black"
        app:ruler_text_size="6sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value: 1"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>